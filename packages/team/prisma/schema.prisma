// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "./types"
}

datasource db {
  provider = "postgresql"
  url      = env("TEAM_DATABASE_URL")
}

model Member {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String   @unique
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("members")
} 