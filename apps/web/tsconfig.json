{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "postcss.config.mjs"
  ],
  "paths": {
    "@/*": ["./src/*"],
    "@davinci/*": ["../../packages/davinci/src/*"],
    "@tasks": ["./modules/tasks"],
    "@tasks/*": ["./modules/tasks/*"],
    "@team": ["./modules/team"],
    "@team/*": ["./modules/team/*"]
  },
  "exclude": [
    "node_modules"
  ]
}
